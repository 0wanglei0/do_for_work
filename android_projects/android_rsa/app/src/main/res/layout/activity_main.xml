<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/s2i_encrypt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/s2i_encrypt"
        android:text="加密"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="200dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/s2i_encrypt_content"
        android:text="加密信息"
        app:layout_constraintTop_toBottomOf="@+id/s2i_encrypt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/s2i_decrypt"
        android:text="解密"
        app:layout_constraintTop_toBottomOf="@+id/s2i_encrypt_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/s2i_decrypt_content"
        android:text="解密内容"
        app:layout_constraintTop_toBottomOf="@+id/s2i_decrypt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/s2i_keypair"
        android:text="generate keypair"
        app:layout_constraintTop_toBottomOf="@+id/s2i_decrypt_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="50dp" />
</androidx.constraintlayout.widget.ConstraintLayout>